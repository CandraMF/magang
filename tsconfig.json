{
    "compilerOptions": {
      "experimentalDecorators": false,
      "emitDecoratorMetadata": false,
      "noImplicitAny": false,
      "target": "es5",
      "module": "esnext",
      "strict": false,
      "jsx": "preserve",
      "importHelpers": false,
      "moduleResolution": "node",
      "skipLibCheck": false,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "resources/ts/src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "resources/ts/src/**/*.ts",
      "resources/ts/src/**/*.tsx",
      "resources/ts/src/**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
  }
